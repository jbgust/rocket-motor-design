<?xml version="1.0" encoding="UTF-8"?>
<!--
    Active la mise à jour à chaud du fichier de config toutes les 30 secondes (par défaut 1 minute)
    <configuration scan="true" scanPeriod="30 seconds" >
-->
<configuration>

    <property name="LOG_PATH" value="${LOG_PATH:-/home}" />

    <springProfile name="!dev">
        <appender name="FILE-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <prudent>true</prudent>

            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- daily rollover -->
                <fileNamePattern>${LOG_PATH}/${METEOR_SERVICE}/log/meteor.%d{yyyy-MM-dd}.txt</fileNamePattern>

                <!-- keep 30 days' worth of history capped at 3GB total size -->
                <maxHistory>30</maxHistory>
                <totalSizeCap>50MB</totalSizeCap>
            </rollingPolicy>

            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <pattern>%d{HH:mm:ss.SSS} [%X{traceId}] %highlight(%-5level) %-30logger{0} : %msg%n</pattern>
            </encoder>
        </appender>
        <appender name="STRIPE-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/${METEOR_SERVICE}/log/stripe.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
                <fileNamePattern>${LOG_PATH}/${METEOR_SERVICE}/log/stripe.%i.log.zip</fileNamePattern>
                <minIndex>1</minIndex>
                <maxIndex>3</maxIndex>
            </rollingPolicy>

            <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
                <maxFileSize>5MB</maxFileSize>
            </triggeringPolicy>
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <pattern>%d{YYYY-MM-DD HH:mm:ss.SSS} [%X{traceId}] %highlight(%-5level) %-30logger{0} : %msg%n</pattern>
            </encoder>
        </appender>


        <appender name="EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">
            <smtpHost>ssl0.ovh.net</smtpHost>
            <smtpPort>465</smtpPort>
            <SSL>true</SSL>
            <username>opencarst@pixelife.net</username>
            <password>${EMAIL_PASSWORD}</password>
            <to>jeromebise@hotmail.com</to>
            <from>opencarst@pixelife.net</from>
            <subject>${METEOR_SERVICE} : %m{20}</subject>
            <layout class="ch.qos.logback.classic.html.HTMLLayout"/>
            <cyclicBufferTracker class="ch.qos.logback.core.spi.CyclicBufferTracker">
                <bufferSize>1</bufferSize>
            </cyclicBufferTracker>
        </appender>
    </springProfile>


    <appender name="CONSOLE-APPENDER" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{HH:mm:ss.SSS} [%X{traceId}] %highlight(%-5level) %-30logger{0} : %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework.web.cors.DefaultCorsProcessor" level="DEBUG">
        <appender-ref ref="CONSOLE-APPENDER" />
    </logger>

    <springProfile name="dev">
        <root level="info">
            <appender-ref ref="CONSOLE-APPENDER" />
        </root>
    </springProfile>
    <springProfile name="ci">
        <root level="info">
            <appender-ref ref="CONSOLE-APPENDER" />
            <appender-ref ref="FILE-APPENDER" />
        </root>
        <logger name="org.springframework.dao.DataIntegrityViolationException">
            <appender-ref ref="FILE-APPENDER" />
            <appender-ref ref="CONSOLE-APPENDER" />
        </logger>
        <logger name="stripe">
            <appender-ref ref="STRIPE-FILE" />
            <appender-ref ref="CONSOLE-APPENDER" />
        </logger>
    </springProfile>
    <springProfile name="beta">
        <root level="info">
            <appender-ref ref="CONSOLE-APPENDER" />
            <appender-ref ref="FILE-APPENDER" />
        </root>
    </springProfile>
    <springProfile name="prod">
        <root level="info">
            <appender-ref ref="CONSOLE-APPENDER" />
            <appender-ref ref="FILE-APPENDER" />
            <appender-ref ref="EMAIL" />
        </root>
        <logger name="stripe">
            <appender-ref ref="STRIPE-FILE" />
            <appender-ref ref="CONSOLE-APPENDER" />
            <appender-ref ref="EMAIL" />
        </logger>
    </springProfile>


</configuration>

